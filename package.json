{
  "name": "clarity-tools",
  "version": "0.0.7",
  "description": "A collection of tools to help visualize the data collected from clarity-js package",
  "author": "Microsoft Corp.",
  "license": "MIT",
  "main": "visualization/uncompress.js",
  "keywords": [
    "clarity",
    "Microsoft",
    "interactions",
    "cursor",
    "pointer",
    "instrumentation",
    "analytics",
    "visualization",
    "extension"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/clarity-tools.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/clarity-tools/issues"
  },
  "dependencies": {
    "clarity-js": "^0.1.14",
    "material-ui": "0.17.4",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.3",
    "react-router": "^3.0.2",
    "react-swipeable-views": "^0.11.2",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.35",
    "@types/cors": "0.0.33",
    "@types/material-ui": "0.17.10",
    "@types/react": "0.14.57",
    "@types/react-dom": "0.14.19",
    "@types/react-redux": "4.4.36",
    "@types/react-router": "3.0.6",
    "@types/react-swipeable-views": "0.0.27",
    "@types/react-tap-event-plugin": "0.0.30",
    "@types/redux": "3.6.0",
    "browserify": "^13.0.1",
    "copyfiles": "^1.0.0",
    "del-cli": "^1.1.0",
    "typescript": "2.3.2"
  },
  "scripts": {
    "compile": "node_modules/.bin/tsc -p ./",
    "bundle:content": "node_modules/.bin/browserify ./extension/instrument.js > ./extension/content.js",
    "bundle:visualization": "node_modules/.bin/browserify ./extension/app.js > ./extension/clarity.js",
    "binplace:extensionChrome": "node_modules/.bin/copyfiles -f ./src/extension/*.html ./src/extension/manifest.json ./src/extension/*.png ./extension/",
    "binplace:extensionEdge": "node_modules/.bin/copyfiles -f extension/* extensions/edge/",
    "binplace:staticEdgeResources": "node_modules/.bin/copyfiles -f src/extension/edge/* extensions/edge/",
    "binplace:moveChromeOutput": "node_modules/.bin/copyfiles -f extension/* extensions/chrome/",
    "cleanExtension": "node_modules/.bin/del-cli extension/",
    "buildExtensions": "npm run binplace:extensionChrome && npm run binplace:extensionEdge && npm run binplace:staticEdgeResources && npm run binplace:moveChromeOutput && npm run cleanExtension",
    "build": "npm run compile && npm run bundle:content && npm run bundle:visualization && npm run buildExtensions"
  }
}
