{
  "name": "clarity-tools",
  "version": "0.0.1",
  "description": "Clarity Tools",
  "author": "Clarity Team",
  "license": "MIT",
  "dependencies": {
    "clarity-js": "^0.1.8",
    "material-ui": "^0.17.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.3",
    "react-router": "^3.0.2",
    "react-swipeable-views": "^0.11.2",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.35",
    "@types/cors": "0.0.33",
    "@types/material-ui": "0.17.10",
    "@types/react": "0.14.57",
    "@types/react-dom": "0.14.19",
    "@types/react-redux": "4.4.36",
    "@types/react-router": "3.0.6",
    "@types/react-swipeable-views": "0.0.27",
    "@types/react-tap-event-plugin": "0.0.30",
    "@types/redux": "3.6.0",
    "browserify": "^13.0.1",
    "copyfiles": "^1.0.0",
    "typescript": "2.3.2"
  },
  "scripts": {
    "compile": "node_modules/.bin/tsc -p ./",
    "bundle:content": "node_modules/.bin/browserify ./build/extension/instrument.js > ./build/extension/content.js",
    "binplace:extension": "node_modules/.bin/copyfiles -f ./extension/*.html ./extension/manifest.json ./extension/*.png ./build/extension/",
    "bundle:visualization": "node_modules/.bin/browserify ./build/visualization/clarity.js > ./build/extension/clarity.js",
    "build": "npm run compile && npm run bundle:content && npm run binplace:extension && npm run bundle:visualization"
  }
}
